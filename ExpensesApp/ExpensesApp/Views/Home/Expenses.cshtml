@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>


@{
    Model.Count();
    if (Model.Count() == 0)
    {
        <div class="text-center">
            <h1 class="display-4 fw-normal">No Mothtly Expenses Yet!</h1>
            <br />
            <a asp-controller="Home" asp-action="CreateEditExpense" role="button" class="btn btn-warning btn-lg fw-bold position-absolute top-50 start-50 translate-middle">Create an Expense</a>
        </div>
    }
    else
    {

        <div class="text-center">
            <h1 class="display-4 fw-normal">Total Monthly Expenses: $</h1>
            <br />
            <a asp-controller="Home" asp-action="CreateEditExpense" role="button" class="display-4 btn btn-warning btn-lg fw-bold">Create an Expense</a>
            <br />
            <br />
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Value $</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @{
                    foreach (var expense in Model)
                    {
                        <tr>
                            <td class="fw-bold">@expense.Id</td>
                            <td class="fw-bold">$ @expense.Value</td>
                            <td class="fw-bold">@expense.Description</td>
                            <td>
                                <a class="btn btn-warning" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                                <a class="btn btn-danger" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                            </td>
                        </tr>
                    }
                }
                <tbody>
                </tbody>
            </table>
        </div>
    }
}


