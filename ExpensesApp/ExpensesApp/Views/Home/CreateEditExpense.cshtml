@{
    ViewData["Title"] = "Create / Edit - Expense";
}

@model ExpensesApp.Models.Expense

<div class="text-center">
    <h1 class="display-4 fw-normal">Create a new Expense<br />or Edit an Existing One</h1>
    <br />
</div>


<form asp-action="CreateEditExpenseForm" asp-controller="Home">
    <label class="fw-bold">Id</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Id" />

    <label class="mt-4 fw-bold">Value $</label>
    <input class="form-control" type="number" placeholder="0.0" asp-for="Value" step="0.1" />

    <label class="mt-4 fw-bold">Description</label>
    <input class="form-control" type="text" placeholder="Add a description..." asp-for="Description" />

    <button class="btn btn-primary mt-4" type="submit">Create current expense</button>

</form>